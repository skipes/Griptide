<link href="@Url.Content("~/Content/css/Jquery/Timer.css")" rel="Stylesheet" type="text/css" />
<script type="text/javascript" src="@Url.Content("~/Content/scripts/WebDesign/Jquery/Timer.js")"></script>

<div class="mainContentHeader__Default">
    <div style="width: auto; height: auto; position: relative; float: left;">
        <div class="meterFrame">
            <div class="meter">
                <div class="meterEmpty"></div>
                <div class="meterFill"></div>
            </div>
            <div class="timer">
                <span class="timerDisplay">10.00</span>
            </div>
        </div>
        <div style="width: inherit;">
            <div class="playButton timerButton">
                <span style="font-family: arial;">Run</span>
            </div>
            <div class="pauseButton timerButton">
                <span style="font-family: arial;">Pause</span>
            </div>
            <div class="resetButton timerButton">
                <span style="font-family: arial;">Reset</span>
            </div>
            
        </div>
        <div style="height: 5px; width: 100%;"></div>
    </div>
    <div class="headerDesc floatRight">
        <span class="headerDesc__Title">Jquery Countdown Timer</span>
        <ul class="headerDesc__featurePoints">
            <li>Timer will countdown to 0 after timer is started</li>
            <li>See color gradient (green -> yellow -> red) during countdown</li>
            <li>Use buttons to play, pause, reset</li>
        </ul>
    </div>
    <div class="emptyClear"></div>
</div>