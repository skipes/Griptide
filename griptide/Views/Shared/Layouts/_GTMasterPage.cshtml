@{
    Layout = null;
}
@model griptide.Models.PageEntryViewModel
<!DOCTYPE html>

<html>
<head>
    @{ Html.RenderPartial("~/Views/Shared/Layouts/_Header.cshtml"); }
    @{ Url.Content("~/content/css/Home.css"); }
</head>
<body>
    @RenderBody()
        <div style="width: 100%; margin: 0 auto; position: absolute; z-index: 500;">
            <div style="width: 100%; height: 130px;">
                <div style="width: 1000px; margin: 0 auto; position: relative;">
                    <a href="@Url.Content("~/home")">
                        <img src="@Url.Content("~/Content/images/griptide_logo.png")" style="float: left" />
                    </a>
                    <a href="@Url.Content("~/home")">
                        <img src="@Url.Content("~/Content/images/griptide_title_text.png")" style="float: left" />
                    </a>
                    <!-- MENU CONTENT HOLDER -->
                    @{ Html.RenderAction("Menu", "MainMenu"); }
                </div>
            </div>
        </div>
        <div style="background-color: #127CBF; height: auto; border-bottom: 1px solid #128cBf;">
            <div style="width: 1000px; margin: 0 auto; height: 100px; padding-bottom: 1em; position: relative;">
            </div>
        </div>
        <div id="t1" style="width: 100%; height: auto; overflow: hidden; clear: both; position: relative;">
            <div id="blueFlameBuffer">
            </div>
            <div id="blueFlames">
            </div>
            
            <div id="mainContentContainer" style="margin-top: 2em;">
                <div>
                    @RenderSection("Topper", false)
                </div>
                <div id="mainContentHeader" class="grayFade dropShadow">
                    @RenderSection("MainContentHeader", false)
                </div>
                <div id="mainContent" class="dropShadow">
                    @RenderSection("MainContent", false)
                </div>
                <div id="mainContentSub" class="dropShadow">
                    @RenderSection("MainContentSub")
                </div>
            </div>
            <div id="blob" style="background-image: url('@Url.Content("~/Content/images/blob.png")'); height: 200px; width: 100%;
                position: absolute; bottom: 0; z-index: 0;">
            </div>
        </div>
        <footer class="pageFooter">
           @{ Html.RenderAction("FooterMenu", "MainMenu"); }
        </footer>
</body>
<script type="text/javascript">

        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-25307303-1']);
        _gaq.push(['_trackPageview']);

        (function () {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();

</script>
</html>
