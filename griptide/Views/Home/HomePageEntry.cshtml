@model griptide.Domain.Entities.ContentEntry

<div class="contentEntry" itemscope itemtype="http://schema.org/Article">
    <div class="contentEntryHeader">
        <div>
            <img class="contentEntryImage" src="@Url.Content("~/Content/images/"+ @Model.Image.ImageFile)"/>
            <div class="contentTableHolder">
                <table id="contentEntryTable" class="contentEntryHeaderTable">
                    <tr>
                        <td>
                            @if(Model.PostID != null){
                                string urlContent= "";
                                if (Model.PostID != null)
                                {
                                    urlContent = string.Format("~/{0}/{1}?postID={2}", @Model.Controller, @Model.Action, Model.PostID);
                                }
                                else if (Model.PostID == null && Model.Controller != null && Model.Action != null)
                                {
                                    urlContent = string.Format("~/{0}/{1}", @Model.Controller, @Model.Action);
                                }
                                
                                <a href="@Url.Content(urlContent)">
                                    <span id="contentEntryTitle" class="contentTitle floatLeft generalTextHighlight" itemprop="name">@Model.EntryTitle</span>
                                </a>
                            } else {
                                <span id="contentEntryTitle" class="contentTitle floatLeft generalTextHighlight" itemprop="name">@Model.EntryTitle</span>
                            }
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <span id="contentEntryDate" class="contentDate floatLeft" itemprop="datePublished">@Model.DateCreated</span>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <span id="contentEntryText" class="contentText floatLeft contentHeaderPadLeft" itemprop="description">@Html.Raw(Model.EntryText)</span>
</div>