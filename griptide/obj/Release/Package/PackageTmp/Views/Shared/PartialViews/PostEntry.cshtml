@model griptide.Domain.Entities.PostEntry

<div class="contentEntry" itemscope itemtype="http://schema.org/Article">
    <div class="contentEntryHeader">
        <div style="display: inline; height: auto;">
            <div class="contentTableHolder">
                <table id="contentEntryTable" class="contentEntryHeaderTable">
                    <tr>
                        <td>
                            <span id="contentEntryTitle" class="contentTitle floatLeft" itemprop="name">@Model.PostTitle</span>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <span id="contentEntryDate" class="contentDate floatLeft" itemprop="datePublished">@Model.DateCreated</span>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <span id="contentEntryText" class="contentText floatLeft contentHeaderPadLeft" itemprop="description">@Html.Raw(Model.PostBody)</span>
</div>